<div class="container text-center">
  <div class="container">
    <h1>Cocktails</h1>
    <br>
    <p>Find the right tail.</p>
    <h5><strong>Let the tale last.</strong></h5>
  </div>

  <hr>

  <div class="container">
    <ul class="cocktails-list"> <!-- list of cocktails -->
      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-6 col-sm-3 col-md-2">
            <%= link_to cocktail_path(cocktail) do %>
            <li>
              <h5><%= cocktail.name %></h5>
              <%= cl_image_tag cocktail.photo, width: 100 %>
            </li>
            <% end %>
          </div>
        <% end %>
      </div>
    </ul> <!-- end of cocktails list -->
  </div>

</div>
