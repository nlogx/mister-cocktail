<span id="btn-add-cocktail">+</span>

<div class="modal">
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">

            <div class="modal-content">
              <span class="modal-close">&times;</span>
                <div class="text-center"><h2>New Tale</h2></div>

                <%= simple_form_for @cocktail do |f| %>
                  <%= f.input :name %>
                  <%= f.input :photo %>
                  <%= f.input :photo_cache, as: :hidden %>

                  <%= f.button :button, type: :submit do %><%= icon('fas', 'check') %><% end %>
                <% end %>

            </div>
        </div>
    </div>
</div>


<script>
  const btnAdd = document.getElementById('btn-add-cocktail');
  const btnClose = document.querySelector('.modal-close');
  const newTale = document.querySelector('.modal');

  btnAdd.onclick = e => {
    newTale.style.display = "block";
  }

  btnClose.onclick = e => {
    newTale.style.display = "none";
  }
</script>

